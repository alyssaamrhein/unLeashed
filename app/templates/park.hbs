<div class="park">
  <h1>{{name}}</h1>

  <div class="inner-park">
    <ul>
      <li>{{description}}</li>
      <div class="star-container">
        {{rating}}
      {{#each star in stars}}
       â˜…
      {{/each}}
      </div>
      <li><img {{bind-attr src=imgUrl}} /></li>
    </ul>
  </div>

<button class="btn">{{#link-to 'park.edit' model}}Change{{/link-to}}</button>
<button {{action "delete"}} class="btn btn-danger">Delete</button>
  {{#if deleteMode}}
    <div class="confirm-box">
      <h4>Really?</h4>
        <button {{action "confirmDelete"}} class="btn"> yes </button>
        <button {{action "cancelDelete"}} class="btn"> no </button>
    </div>
  {{/if}}
  {{link-to "New Comment" "park.new_comment" this.id class='btn btn-primary'}}
  {{link-to "See Who's Here" "park.checkin" this.id class='btn btn-primary'}}
<div class="comment-box">
  <h2>Comments ({{comments.length}})</h2>
    {{#each comments}}
      <div class="comment">
        <img {{bind-attr src=userImgUrl}} /> 
          <p>{{commenter}}</p>
          <p>said:</p>  
          <p>{{text}}</p>
        <button {{action "deleteComment"}}  class="btn btn-danger">Delete</button>
      </div>
    {{/each}}
  </div>  
</div>
<div class="checkin">
  <h3>See whos here</h3>
      <ul>
  {{#each checkins}}
      <li>{{userName}}
      {{date}}</li>

  {{/each}}
      <ul>
</div>


{{outlet}}
